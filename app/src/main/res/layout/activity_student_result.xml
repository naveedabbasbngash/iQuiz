<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EA4B1"
    tools:context=".StudentResult">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="20dp"
        >
        <TextView
            android:id="@+id/textinfo"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="My Result"
            android:textColor="#ffffff"
            android:typeface="monospace"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="25dp"
            ></TextView>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Marks"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:typeface="serif"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:id="@+id/rsltmarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:text="0"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Status: "
                android:gravity="center"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:id="@+id/rsltstatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="waiting"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="25sp"
                android:textColor="#ffffff"
                ></TextView>
        </LinearLayout>
        <Button
            android:id="@+id/adback"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:text="Back"
            android:background="@drawable/btn_background_white"
            ></Button>

        <Button
            android:visibility="gone"

            android:onClick="showpdf"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:text="Back"
            android:background="@drawable/btn_background_white"
            ></Button>
    </LinearLayout>

</RelativeLayout>