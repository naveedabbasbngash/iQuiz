<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45C3B8"
    tools:context=".TeacherDownloadAssignment"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="100dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Teacher Download Assignments"
        android:textColor="#ffffff"
        android:gravity="center"
        android:typeface="monospace"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enter Department"
            android:gravity="center"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textSize="16dp"
            android:textStyle="bold"
            ></TextView>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Department"
            android:textStyle="bold"
            android:inputType="text"
            android:id="@+id/dept_spinner"
            android:textSize="15dp"
            android:entries="@array/department_arrays"
            android:prompt="@string/department_prompt"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enter A Subject"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold"
            ></TextView>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Subject"
            android:textStyle="bold"
            android:inputType="text"
            android:id="@+id/sub_spinner"
            android:textSize="15dp"
            android:drawablePadding="5dp"
            android:prompt="@string/subject_prompt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enter A Semester"
            android:gravity="center"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textSize="16dp"
            android:textStyle="bold"
            ></TextView>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Semester"
            android:textStyle="bold"
            android:inputType="text"
            android:id="@+id/sem_spinner"
            android:textSize="15dp"
            android:entries="@array/semester_arrays"
            android:prompt="@string/semester_prompt"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enter Section"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold"
            ></TextView>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Semester"
            android:textStyle="bold"
            android:inputType="text"
            android:id="@+id/sec_spinner"
            android:textSize="15dp"
            android:entries="@array/section_arrays"
            android:prompt="@string/section_prompt"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/listassign"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="List Assigments"
        android:background="@drawable/btn_background_white"
        ></Button>
        <TextView
        android:id="@+id/txtstatus"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>

</LinearLayout>
</RelativeLayout>